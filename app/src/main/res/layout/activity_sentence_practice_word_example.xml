<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@+id/view_head"
        layout="@layout/view_head" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/view_head"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_syntax"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:text="句法公式：MMMMMMMMMMMMMMMMMMMMMMM"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black_light"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例句:"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black_light"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_20"/>
        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商店里一个苹果也没有。"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/black_light"
            android:padding="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/img_play"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/img_play"
            android:layout_marginTop="@dimen/dp_30"/>
        <TextView
            android:id="@+id/btn_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="翻译"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_light"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tv_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There is no any one apple in the shop;"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black_light"
            android:layout_margin="@dimen/dp_10"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btn_begin"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_45"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view"
            android:text="开始练习"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_start"
            android:layout_margin="@dimen/dp_20"/>
    </LinearLayout>
</RelativeLayout>