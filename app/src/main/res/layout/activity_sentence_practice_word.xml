<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@+id/view_head"
        layout="@layout/view_head" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_head"
        android:layout_above="@+id/view_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第1题"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black_light"
                android:padding="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题目"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black_light"
                android:padding="@dimen/dp_20"/>
            <hsk3.jane.cn.hsk3.view.FluidLayout
                android:id="@+id/view_timu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20">
            </hsk3.jane.cn.hsk3.view.FluidLayout>

            <EditText
                android:id="@+id/edt_answer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shape_bg_edit_answer"
                android:hint="请输入答案"
                android:textColor="@color/black_light"
                android:textSize="@dimen/sp_16" />
            <LinearLayout
                android:id="@+id/view_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_20"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的答案"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_my_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商店里没有一个苹果也。"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_20"/>
                <TextView
                    android:id="@+id/tv_right_answer_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正确答案"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_20"/>
                <LinearLayout
                    android:id="@+id/view_right_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_right_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商店里一个苹果也没有。"
                            android:textColor="@color/black_light"
                            android:textSize="@dimen/sp_20"
                            android:maxWidth="@dimen/dp_300"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:id="@+id/img_play"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:src="@mipmap/img_play"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_right_answer"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/btn_translate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="翻译"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/black_light"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/tv_translation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="There is no any one apple in the shop;"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/black_light"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_see_answer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="看答案"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@color/green"/>
        <Button
            android:id="@+id/btn_redo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="重做"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@color/green"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="下一题"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@color/green"/>
    </LinearLayout>

</RelativeLayout>