<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@+id/view_head"
        layout="@layout/view_head" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/view_head">
        <RelativeLayout
            android:id="@+id/view_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_item_press"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:onClick="onStart">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="载入词库数据"
                android:layout_centerVertical="true"
                android:textColor="@color/black_light"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_theme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_item_press"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:onClick="onStart">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主题"
                android:layout_centerVertical="true"
                android:textColor="@color/black_light"/>

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_21"
                android:src="@mipmap/img_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:text="退出"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:onClick="onStart"
        android:background="@drawable/shape_btn_exit"
        android:layout_margin="@dimen/dp_20"/>
</RelativeLayout>